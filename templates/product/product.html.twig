{% extends 'base.html.twig' %}

{% block title %}Détails d'un produit{% endblock %}

{% block body %}
<style>
    .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
    .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
</style>

<div class="example-wrapper">
    <h1>Détails d'un produit</h1>
    <h2>{{ product.name }}</h2>
    <p><i>Description du jeu : </i>{{ product.description }}</p>
    <p><i>Date d'enregistrement : </i>{{ product.creationDate | date('d/m/Y') }}</p>
    <img src="{{ asset(product.image) }}">
    <p><a href="{{ path("home") }}">Retour à l'accueil</a></p>
</div>
{% endblock %}
